<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>Enrollment</title>
</head>

<body style="position: relative; padding-bottom: 60px; min-height: 100vh;">
    <div class="header">
        <%- include('layout/header')%>
    </div>
    <div class="enrollPage">
        <h1 class="text-center"> <b> Enrollment</b></h1>
        <div class="text-center text-success">
           <b> <%= message  %> </b>
        </div>
        <div class="container modal-dialog">
            <div class="modal-content border border-dark">
                <div class="container">
                    <form action="/" method="POST" enctype="multipart/form-data">
                        <div class="mb-3 mt-3">
                            <label for="name" class="form-label">Student Name</label>
                            <input type="text" class="form-control" id="name" name="name" required>
                        </div>
                        <div class="mb-3 mt-3">
                            <label for="identitiy" class="form-label">ID</label>
                            <input type="text" class="form-control" id="identitiy" name="identity" required>
                        </div>
                        <div class="mb-3 mt-3">
                            <label for="className" class="form-label">Class</label>
                            <input type="text" class="form-control" id="className" name="className" required>
                        </div>
                        <div class="mb-3 mt-3">
                            <label for="dob" class="form-label">Date Of Birth</label>
                            <input type="date" class="form-control" id="dob" name="dob" required>
                        </div>
                        <div class="mb-3 mt-3">
                            <select class="form-select" aria-label="Default select example" id="branch" name="branch" required>
                                <option selected>Select Branch</option>
                                <option value="CSE">CSE</option>
                                <option value="EEE">EEE</option>
                                <option value="ECE">ECE</option>
                                <option value="IT">IT</option>
                            </select>
                        </div>
                        <div class="mb-3 mt-3">
                            <label class="form-label" for="customFile">Passport Size Photo</label>
                            <input type="file" class="form-control" id="image" name="image" required/>
                        </div>
                        <div class="text-center mb-1">
                            <button type="submit" class="btn btn-success"> <b> Submit </b></button>
                        </div>
                </div>
                </form>
            </div>
        </div>
    </div>
    <div class="footer">
        <%- include('layout/footer')%>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
</body>

</html>